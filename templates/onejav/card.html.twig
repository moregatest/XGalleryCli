<div class="card {% if item.detail is null %}text-white bg-dark{% endif %}">
    <img data-src="{{ item.cover }}" class="card-img-top lazy" alt="{{ item.title }}">

    <div class="card-header">
        <h5 style="text-align: left; display: inline-block">{{ item.itemNumber }} <span
                    class="badge badge-secondary">{{ item.size }} GB</span></h5>
        <span class="float-right"><a href="/onejav/daily/{{ item.dateSlug }}"><i
                        class="fas fa-calendar-alt"></i> {{ item.date }}</a></span>
    </div>

    {% if item.description|length %}
        <div class="card-body">
            <blockquote class="blockquote mb-0">
                <small>{{ item.description }}</small>
            </blockquote>
        </div>
    {% endif %}

    {% if item.tags|length > 0 %}
        <ul class="list-group list-group-flush">
            <li class="list-group-item">
                <i class="fas fa-tags"></i>
                {% for tag in item.tags %}
                    <a href=""><span class="badge badge-info">{{ tag }}</span></a>
                {% endfor %}
            </li>
        </ul>
    {% endif %}

    {% if item.detail is null %}
        <ul class="list-group list-group-flush">
            {% for actress in item.actresses %}
                <li class="list-group-item"><a href="/onejav/actress/{{ actress }}">{{ actress }}</a></li>
            {% endfor %}
        </ul>
    {% else %}
        <ul class="list-group list-group-flush">
            {% for actress in item.detail.actress %}
                <li class="list-group-item"><i class="fas fa-female"></i> <a href="">{{ actress }}</a></li>
            {% endfor %}
        </ul>
    {% endif %}

    {% if downloads is defined %}
        <div class="card-footer">
            <div class="btn-group" role="group" aria-label="Button group with nested dropdown">
                <div class="btn-group" role="group">
                    <button id="btnGroupDrop1" type="button" class="btn btn-primary dropdown-toggle"
                            data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <i class="fas fa-download"></i> Download <span
                                class="badge badge-pill badge-light">{{ downloads|length }}</span></a>
                    </button>
                    <div class="dropdown-menu" aria-labelledby="btnGroupDrop1">
                        {% for download in downloads %}
                            <a href="https://onejav.com{{ download.torrent }}"
                               class="dropdown-item">Size {{ download.size }}</a>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    {% else %}
        <div class="card-footer">
            <div class="btn-group" role="group" aria-label="Button group with nested dropdown">
                <div class="btn-group" role="group">
                    <button id="btnGroupDrop1" type="button" class="btn btn-primary dropdown-toggle"
                            data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <i class="fas fa-download"></i> Download <span
                                class="badge badge-pill badge-light">1</span></a>
                    </button>
                    <div class="dropdown-menu" aria-labelledby="btnGroupDrop1">
                        <a href="https://onejav.com{{ item.torrent }}"
                           class="dropdown-item">Size {{ item.size }}</a>
                    </div>
                </div>
            </div>
        </div>
    {% endif %}
</div>
