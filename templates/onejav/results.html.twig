{% extends "base/base.html.twig" %}
{% block title %}XGallery - Onejav - {{ keyword }} - {{ items|length }} items{% endblock %}
{% block body %}
    <div class="container-fluid">
        <div class="row">
            <div class="{% if items|length == 1 %}col-4{% else %}card-columns{% endif %}">
                {% for key, item in items %}
                    {{ include('/onejav/card.html.twig') }}
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}

