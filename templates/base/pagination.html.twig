<nav aria-label="Page navigation example">
    <ul class="pagination">
        <li class="page-item {{ currentPage == 1 ? 'disabled' }}"><a class="page-link" href="/media?page=1">Begin</a>
        </li>
        <li class="page-item {{ currentPage == 1 ? 'disabled' }}">
            <a class="page-link" href="/media?page={{ currentPage - 1 }}"><i class="fas fa-arrow-circle-left"></i>
                Previous</a>
        </li>
        {% for page in range(1, pages) %}
            <li class="page-item {{ currentPage == page ? 'active disabled' }}">
                <a class="page-link" href="/media?page={{ page }}">{{ page }}</a></li>
        {% endfor %}
        <li class="page-item"><a class="page-link" href="/media?page={{ currentPage + 1 }}">Next <i
                        class="fas fa-arrow-circle-right"></i></a></li>
        <li class="page-item"><a class="page-link" href="/media?page={{ totalPages }}">End</a></li>
    </ul>
</nav>
